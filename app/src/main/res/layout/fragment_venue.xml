<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.RoyalOrchidFragment"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/image_border"
        android:gravity="start"
        android:paddingStart="60dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/royal_orchid"
                app:civ_border_color="@color/colorSecondaryPurple"
                app:civ_border_width="3dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="1"
                app:civ_shadow_color="#8BC34A"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/royal_orchid"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance_0"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                />

        </LinearLayout>
    </LinearLayout>


    <GridLayout
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingTop="10dp"
        android:columnCount="2"
        android:rowCount="6">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/location"
            android:layout_row="0"
            android:layout_column="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/venue_address"
            android:layout_row="0"
            android:layout_column="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="15dp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/phone"
            android:layout_row="1"
            android:layout_column="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/venue_phone"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="15dp"
            />

    </GridLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:paddingEnd="20dp"
        android:paddingStart="0dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/navigation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:src="@drawable/baseline_navigation_white_48dp"
            android:clickable="false"
            android:backgroundTint="@color/colorPrimaryDark"
            />

    </LinearLayout>

</LinearLayout>