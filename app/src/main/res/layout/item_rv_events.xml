            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/rv_speaker_image_4"
                    app:civ_border_color="@color/colorPrimaryLight"
                    app:civ_border_width="1dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="1"
                    app:civ_shadow_color="@color/colorGrayDark"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rv_event_speaker_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="8">

                <TextView
                    android:id="@+id/rv_speaker_name_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:clickable="false"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="10am : 12pm"/>

                <TextView
                    android:id="@+id/rv_speaker_position_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:clickable="false"
                    android:textSize="13sp"
                    android:text="Registration"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/rv_speaker_image_5"
                    app:civ_border_color="@color/colorPrimaryLight"
                    app:civ_border_width="1dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="1"
                    app:civ_shadow_color="@color/colorGrayDark"/>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/rv_event_details_container_view"
        android:background="@drawable/table_border"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:visibility="visible"
        android:clickable="false"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/rv_event_time_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical|start"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            android:textStyle="bold"
            android:clickable="false"/>

        <TextView
            android:id="@+id/rv_event_location_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical|start"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            android:textStyle="bold"
            android:clickable="false"/>



    </LinearLayout>

</LinearLayout>