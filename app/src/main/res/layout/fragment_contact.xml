<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contact.ContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="15"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/con_registration"
            android:textColor="@color/colorWhite"
            android:background="@drawable/image_border"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="20sp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/con_registration_recycler_view"/>

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/con_accommodation"
            android:textColor="@color/colorWhite"
            android:background="@drawable/image_border"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/con_accommodation_recycler_view"/>


        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/con_transport"
            android:textColor="@color/colorWhite"
            android:background="@drawable/image_border"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>


        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/con_transport_recycler_view"/>

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/con_website"
            android:textColor="@color/colorWhite"
            android:background="@drawable/image_border"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>


        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/con_website_recycler_view"/>

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/con_secretary"
            android:textColor="@color/colorWhite"
            android:background="@drawable/image_border"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/con_sec_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/con_sec_details"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"/>

                <LinearLayout
                    android:id="@+id/call_sec_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="15"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="14"
                        android:text="@string/con_sec_mob_1"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/phone_big"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/call_sec_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="15"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="14"
                        android:text="@string/con_sec_mob_2"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/phone_big"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="15"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="14"
                        android:text="@string/con_sec_email"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>

                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/mail"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/con_sec_address"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
